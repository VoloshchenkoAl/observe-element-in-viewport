{
  "compilerOptions": {
    "target": "es2018",
    "module": "umd",
    "lib": ["es2018", "dom"],
    "sourceMap": true,
    "project": "./",
    "outDir": "./dist",
    "rootDir": "./",

    "strict": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*"]
}
