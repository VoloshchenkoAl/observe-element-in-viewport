{
  "name": "observe-element-in-viewport",
  "version": "0.0.3",
  "description": "Wrapper around IntersectionObserver to hide away its weirdness and increase ease of usability",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "src/index.ts",
  "scripts": {
    "test": "echo \"TODO: Add tests\" && exit 1",
    "prepare": "tsc --project . && npm run bundle",
    "bundle": "rollup -c",
    "watch": "fswatch -0 -o src/index.ts ./rollup.config.js ./tsconfig.json | xargs -0 -n1 -I% `which bash` -c 'echo \"----Starting bundling at $(date)---\" && npm run bundle && echo \"----Done bundling at $(date)---\"'"
  },
  "keywords": [
    "IntersectionObserver",
    "viewport",
    "is-in-viewport"
  ],
  "author": "Mudit Ameta <zeusdeux@gmail.com>",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "prettier": "^1.14.3",
    "rollup": "^0.66.2",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript": "^1.0.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeusdeux/observe-element-in-viewport.git"
  },
  "bugs": {
    "url": "https://github.com/zeusdeux/observe-element-in-viewport/issues"
